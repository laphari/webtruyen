        <label>Thể loại</label>
        <br />
        <select name="theloaibia">
            @foreach (var item in @ViewData["demo10"] as List<webtruyen.Models.Category>)
            {
                <option value="@item.CategoryId">@item.CategoryName</option>
            }
        </select>
        <br />
        <label>Mô tả</label>
        <textarea name="motaanhbia" class="form-control">
        
        </textarea>
