        <label>Mã bìa</label>
        <input type="text" class="form-control" name="tenanhbia" />
        <label>Trích dẫn</label>
        <br />
        <select name="trichdan">
            @foreach (var item in @ViewData["demo9"] as List<webtruyen.Models.Story>)
